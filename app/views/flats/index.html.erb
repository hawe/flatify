<%- model_class = Flat -%>
<div class="page-header">
  <h1><%=t '.title', :default => Flat %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:unique_id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:flat_size) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:description_longer) %></th>
      <th><%= model_class.human_attribute_name(:location_address) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:poplatky) %></th>
      <th><%= model_class.human_attribute_name(:image_url) %></th>
      <th><%= model_class.human_attribute_name(:detail_url) %></th>
      <th><%= model_class.human_attribute_name(:podlazi) %></th>
      <th><%= model_class.human_attribute_name(:first_seen_at) %></th>
      <th><%= model_class.human_attribute_name(:updated_at) %></th>
      <th><%= model_class.human_attribute_name(:available_from) %></th>
      <th><%= model_class.human_attribute_name(:balcony) %></th>
      <th><%= model_class.human_attribute_name(:terrace) %></th>
      <th><%= model_class.human_attribute_name(:area_m) %></th>
      <th><%= model_class.human_attribute_name(:elevator) %></th>
      <th><%= model_class.human_attribute_name(:furnished) %></th>
      <th><%= model_class.human_attribute_name(:marked_as_crap_user1) %></th>
      <th><%= model_class.human_attribute_name(:marked_as_crap_user2) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @flats.each do |flat| %>
      <tr>
        <td><%= flat.id %></td>
        <td><%= flat.unique_id %></td>
        <td><%= flat.title %></td>
        <td><%= flat.flat_size %></td>
        <td><%= flat.description %></td>
        <td><%= flat.description_longer %></td>
        <td><%= flat.location_address %></td>
        <td><%= flat.price %></td>
        <td><%= flat.poplatky %></td>
        <td><%= flat.image_url %></td>
        <td><%= flat.detail_url %></td>
        <td><%= flat.podlazi %></td>
        <td><%= flat.first_seen_at %></td>
        <td><%= flat.updated_at %></td>
        <td><%= flat.available_from %></td>
        <td><%= flat.balcony %></td>
        <td><%= flat.terrace %></td>
        <td><%= flat.area_m %></td>
        <td><%= flat.elevator %></td>
        <td><%= flat.furnished %></td>
        <td><%= flat.marked_as_crap_user1 %></td>
        <td><%= flat.marked_as_crap_user2 %></td>
        <td><%=l flat.created_at, format: :long %></td>
        <td>
          <%= link_to flat_path(flat), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to flat_path(flat), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_flat_path,
            :class => 'btn btn-primary' %>
